    <LinearLayout
        android:id="@+id/noAccountLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondActivityLogin"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/noAccountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="5dp"
            android:text="Don't have an account?"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>
    <!-- antigo botao de login com google
    <Button
        android:id="@+id/SignInGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickLoginGoogleButton"
        android:text="Button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="32dp" />
-->
    <LinearLayout
        android:id="@+id/OtherSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <ImageButton
            android:id="@+id/SignInFacebook"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/facebook_sign_in_round_button"
            android:onClick="onClickLoginFacebookButton"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/fb_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <ImageButton
            android:id="@+id/SignInGoogle"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/google_sign_in_round_button"
            android:onClick="onClickLoginGoogleButton"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/google_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
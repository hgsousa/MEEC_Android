<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cm_meec_2021">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/eec"
        android:label="@string/app_name"
        android:roundIcon="@drawable/eec"
        android:supportsRtl="true"
        android:theme="@style/Theme.CM_MEEC_2021">
        <activity android:name=".PlayAudioActivity"></activity>
        <activity android:name=".AudioListActivity" />
        <activity android:name=".RecordActivity" />
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ThirdActivity_register"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SecondActivity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>